<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@drawable/welcomenew_14"
    tools:context=".Buyers.MainActivity">

    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:src="@drawable/amazon_logo" />

    <TextView
        android:id="@+id/tvSLogin"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="229dp"
        android:layout_marginEnd="88dp"
        android:text="Find , Discover , Choose and Buy anything online."
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="22sp"
        android:textStyle="bold|italic" />
    <Button
        android:id="@+id/btn_mainLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tvBecomeSeller"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:background="@drawable/buttons"
        android:textSize="18sp"
        android:padding="20dp"
        android:textAllCaps="false"
        android:text="Already have account ? Login"
        android:textColor="#fff"
        />

    <Button
        android:id="@+id/btn_mainJoin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_above="@+id/btn_mainLogin"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:background="@drawable/inputs_design"
        android:textSize="18sp"
        android:padding="20dp"
        android:textAllCaps="false"
        android:text="Join Now"
        android:textColor="#000000"
        />

    <TextView
        android:id="@+id/tvBecomeSeller"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Want to become seller ?"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="22sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="17dp"
        android:layout_marginBottom="10dp"/>
</RelativeLayout>